<div class="container" style="margin-top: 150px;">

	<!-- Organization Name -->
	<%= form.input :organizationName, :label => "Organization Name", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
	<div class="col-md-8">
		<%= form.input_field :organizationName, class: "" , style: "width: 755px;"%>
	</div>
	<% end %>

	<!-- Mailing Address -->
	<%= form.input :mailingAddress, :label => "Mailing Address", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
	<div class="col-md-8">
		<%= form.input_field :mailingAddress, class: "" , style: "width: 755px;"%>
	</div>
	<% end %>

	<div class="row">
		<!-- City -->
		<%= form.input :city, wrapper_html: { class: '' },label_html: { class: 'col-md-1 col-form-label margintop'} do %>
		<div class="col-md-3">
			<%= form.input_field :city, class: "margintop" , style: ""%>
		</div>
		<% end %>

		<!-- STATE -->
		<%= form.input :state, wrapper_html: { class: '' },label_html: { class: 'col-md-2 col-form-label'} do %>
		<div class="col-md-1">
			<%= form.input :state, label: false, collection: ["Alabama", "Alaska", "Arizona", "Arkansas", "California", "Colorado", "Connecticut", "Delaware", "District of Columbia", "Florida", "Georgia", "Hawaii", "Idaho", "Illinois", "Indiana", "Iowa", "Kansas", "Kentucky", "Louisiana", "Maine", "Maryland", "Massachusetts", "Michigan", "Minnesota", "Mississippi", "Missouri", "Montana", "Nebraska", "Nevada", "New Hampshire", "New Jersey", "New Mexico", "New York", "North Carolina", "North Dakota", "Ohio", "Oklahoma", "Oregon", "Pennsylvania", "Puerto Rico", "Rhode Island", "South Carolina", "South Dakota", "Tennessee", "Texas", "Utah", "Vermont", "Virginia", "Washington", "West Virginia", "Wisconsin", "Wyoming", "N/A"], :selected => @submission.state, class: "" %>
		</div>
		<% end %>

		<!-- Country -->
		<%= form.input :country, wrapper_html: { class: '' },label_html: { class: 'col-md-2 col-form-label'} do %>
		<div class="col-md-2">
			<%= form.input :country, :input_html => {:style=> 'background: white;
			-webkit-appearance: square-button;
			-webkit-border-radius: 2px;'}, label: false, as: :country, :selected => @submission.country, class: "" %>
		</div>
		<% end %>

		<!-- Zipcode -->
		<%= form.input :zipcode, wrapper_html: { class: '' },label_html: { class: 'col-md-2 col-form-label'} do %>
		<div class="col-md-1">
			<%= form.input_field :zipcode, style: "width: 170px;", class: "" %>
		</div>
		<% end %>
	</div>




	<!-- Organization URL (optional) -->
	<%= form.input :organizationURL, :label => "Organization URL", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
	<div class="col-md-8">
		<%= form.input_field :organizationURL, class: "" , style: "width: 755px;"%>
	</div>
	<% end %>

	<!-- Organization Contact Name (optional) -->
	<%= form.input :organizationContactName, :label => "Contact Name", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
	<div class="col-md-8">
		<%= form.input_field :organizationContactName, class: "" , style: "width: 755px;"%>
	</div>
	<% end %>

	<!-- Organization Contact Job Title (optional) -->
	<%= form.input :organizationContactJobTitle, :label => "Contact Job Title", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
	<div class="col-md-8">
		<%= form.input_field :organizationContactJobTitle, class: "" , style: "width: 755px;"%>
	</div>
	<% end %>

	<!-- Contact Email...(optional) -->
	<%= form.input :organizationContactEmail, :label => "Contact Email", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
	<div class="col-md-8">
		<%= form.input_field :organizationContactEmail, class: "" , style: "width: 755px;"%>
	</div>
	<% end %>







<!-- Organization Mission/Description -->
<%= form.input :organizationMission, :label => "Organization Mission/Description", wrapper_html: { class: 'row' },label_html: { class: 'col-md-12 col-form-label'} do %>
<div class="col-md-12">
<%= form.text_area :organizationMission, class: "form-control", rows: 3 %>
</div>
<% end %>


</div>
