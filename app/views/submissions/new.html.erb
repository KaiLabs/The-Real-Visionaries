				<% end %>

				<!-- Financial Services -->
				<%= form.input :financialServices, :label => "Financial Services", wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :financialServices, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Food/Beverage -->
				<%= form.input :foodBeverageCPG, :label => "Food/Beverage", wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :foodBeverageCPG, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Gov -->
