					<%= form.input :government, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Healthcare -->
				<%= form.input :healthcare, wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :healthcare, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Hospitality -->
				<%= form.input :hospitality, wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :hospitality, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Manufacturing -->
				<%= form.input :manufacturing, wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :manufacturing, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Media Marketing -->
				<%= form.input :mediaMarketing, :label => "Media Marketing", wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :mediaMarketing, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Nonprofit -->
				<%= form.input :nonProfit, wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :nonProfit, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Pharma -->
				<%= form.input :pharma, :label => "Pharmaceuticals", wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :pharma, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Professional Services -->
				<%= form.input :professionalServices, :label => "Professional Services", wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :professionalServices, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Retail Stores -->
				<%= form.input :retailStores, :label => "Retail Stores", wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :artsEntertainment, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Technology -->
				<%= form.input :technology, wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :technology, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Transportation -->
				<%= form.input :transportation, wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :transportation, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Other -->
				<%= form.input :other, wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :other, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>
			</div>





<!--------------------------------------------------------------------------->

<!-- Organization Experience/Rec -->
<%= form.input :organizationRecommendation, :label => "Describe your responsibilities and overall experiences. Would you recommend this experience to other Wesleyan students?", wrapper_html: { class: 'row' },label_html: { class: 'col-md-12 col-form-label'} do %>
<div class="col-md-12">
	<%= form.text_area :organizationRecommendation, class: "form-control", rows: 5 %>
</div>
<% end %>

