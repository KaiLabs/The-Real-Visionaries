			</div>
			<% end %>

			<!-- City -->
			<%= form.input :city, wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :city, class: "form-control" %>
			</div>
			<% end %>

			<!-- MISSING STATE -->

			<!-- Zipcode -->
			<%= form.input :zipcode, wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :zipcode, class: "form-control" %>
			</div>
			<% end %>

			<!-- Organization URL (optional) -->
			<%= form.input :organizationURL, :label => "Organization URL", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :organizationURL, class: "form-control" %>
			</div>
			<% end %>

			<!-- Organization Contact Name (optional) -->
			<%= form.input :organizationContactName, :label => "Contact Name", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :organizationContactName, class: "form-control" %>
			</div>
			<% end %>

			<!-- Organization Contact Job Title (optional) -->
			<%= form.input :organizationContactJobTitle, :label => "Contact Job Title", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :organizationContactJobTitle, class: "form-control" %>
			</div>
			<% end %>

			<!-- Contact Email...(optional) -->
			<%= form.input :organizationContactEmail, :label => "Wesleyan Student Contact Email", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :organizationContactEmail, class: "form-control" %>
			</div>
			<% end %>

			<!-- Cardinal Internship Bool -->
