			<%= form.input :organizationURL, :label => "Organization URL", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :organizationURL, class: "" , style: "width: 755px;"%>
			</div>
			<% end %>

			<!-- Organization Contact Name (optional) -->
			<%= form.input :organizationContactName, :label => "Contact Name", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :organizationContactName, class: "" , style: "width: 755px;"%>
			</div>
			<% end %>

			<!-- Organization Contact Job Title (optional) -->
			<%= form.input :organizationContactJobTitle, :label => "Contact Job Title", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :organizationContactJobTitle, class: "" , style: "width: 755px;"%>
			</div>
			<% end %>

			<!-- Contact Email...(optional) -->
			<%= form.input :organizationContactEmail, :label => "Contact Email", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :organizationContactEmail, class: "" , style: "width: 755px;"%>
			</div>
			<% end %>







<!-- Organization Mission/Description -->
<%= form.input :organizationMission, :label => "Organization Mission/Description", wrapper_html: { class: 'row' },label_html: { class: 'col-md-12 col-form-label'} do %>
<div class="col-md-12">
	<%= form.text_area :organizationMission, class: "form-control", rows: 3 %>
</div>
<% end %>





