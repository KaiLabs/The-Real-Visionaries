<body>
		<div class="header">
	    <section class="parent">
	      <div class="child row">
					<div class="headcontainer">
	          <%= content_tag :div, class: "col-md-11" do -%>
	            <%= link_to "WESLEYAN STUDENT INTERNSHIP REVIEWS", home_index_path, class: "head" %>
	          <% end -%>
	          <%= content_tag :div, class: "col-md-1" do -%>
	            <%= link_to "Sign out", signout_path, id: "sign_out", class: "signout" %>
	          <% end -%>
	        </div>
	        <div class="search-title">
	          <h3 style="font-size: 35px; margin-left: 5px;">ENTRY FORM</h3>
	        </div>
	      </div>
	    </section>
	  </div>
		<%= simple_form_for @submission do |form| %>

		<div class="container" style="margin-top: 150px;">

			<!-- Position Title -->
			<%= form.input :positionTitle, :label => "Position title", wrapper_html: { class: 'row' },label_html: { class: 'col-md-2 col-form-label'} do %>
			<div class="col-md-10">
				<%= form.input_field :positionTitle, class: "", style: "width: 950px;" %>
			</div>
			<% end %>




			<div class="row">
				<!-- Season -->
				<%= form.input :season, wrapper_html: { class: '' },label_html: { class: 'col-md-1 col-form-label margintop'} do %>
				<div class="col-md-1 margintop">
					<%= form.input :season, label: false, collection: ["Fall", "Winter", "Spring", "Summer"], :selected => @submission.season, class: "margintop" %>
				</div>
				<% end %>

				<!-- Year -->
				<%= form.input :year, wrapper_html: { class: '' },label_html: { class: 'col-md-1 col-form-label'} do %>
				<div class="col-md-2" style="margin-top: -3px;">
					<%= form.input :year, :input_html => {:style=> 'width: 80px; background: white;
					-webkit-appearance: square-button;
					-webkit-border-radius: 2px;'}, label: false, :as => :date,
					:start_year => 2010, :end_year => 2017, order: [:year], :selected => @submission.year, class: "" %>
				</div>
				<% end %>

				<!-- Hours/Week -->
				<%= form.input :hours, :label => "Hours Per Week", wrapper_html: { class: '' },label_html: { class: 'col-md-2 col-form-label'} do %>
				<div class="col-md-2">
					<%= form.input_field :hours, class: "", style: "width: 80px;" %>
				</div>
				<% end %>

				<!-- Type of Compensation -->
				<%= form.input :compensation, wrapper_html: { class: '' },label_html: { class: 'col-md-2 col-form-label'} do %>
				<div class="col-md-1">
					<%= form.input :compensation, label: false, collection: ["Paid", "Unpaid", "Stipend"], :selected => @submission.compensation, class: "" %>
				</div>
				<% end %>

			</div>


			<p style="height: 8px"></p>




			<!-- Outside Funding Explanation -->
			<%= form.input :outsideCompensation, :label => "If stipend/ outside funding, please describe:", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :outsideCompensation, class: "", style: "width: 755px;" %>
			</div>
			<% end %>



			<!----------- Field/Industry Checkboxes ------------------------------>
			<p>* Field / Industry: </p>


			<div class="row">
				<!-- Agriculture -->
				<%= form.input :agriculture, wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :agriculture, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Architecture -->
				<%= form.input :architecture, wrapper_html: { class: 'col-md-4 ' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :architecture, as: :boolean, checked_value:true, unchecked_value: false, :label => false, class: "form-control" %>
				<% end %>

				<!-- Arts/Entertainment -->
				<%= form.input :artsEntertainment,:label => "Arts/Entertainment", wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :artsEntertainment, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Education -->
				<%= form.input :education, wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
					<%= form.input :education, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
				<% end %>

				<!-- Energy -->
				<%= form.input :energy, wrapper_html: { class: 'col-md-4' },label_html: { class: 'col-md-7 col-form-label'} do %>
