<div class="container" style="margin-top: 150px;">

	<p>
	  <strong>Position Title:</strong>
	  <%= h @submission.positionTitle %>
	</p>


			<!-- Organization Name -->
			<%= form.input :organizationName, :label => "Organization Name", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :organizationName, class: "form-control" %>
			</div>
			<% end %>

			<!-- Mailing Address -->
			<%= form.input :mailingAddress, :label => "Mailing Address", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :mailingAddress, class: "form-control" %>
			</div>
			<% end %>


			<!-- Country -->
			<%= form.input :country, wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input :country, label: false, as: :country, :selected => @submission.country, class: "form-control" %>
			</div>
			<% end %>

			<!-- City -->
			<%= form.input :city, wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :city, class: "form-control" %>
			</div>
			<% end %>

      <!-- MISSING STATE -->

			<!-- Zipcode -->
			<%= form.input :zipcode, wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :zipcode, class: "form-control" %>
			</div>
			<% end %>

			<!-- Organization URL (optional) -->
			<%= form.input :organizationURL, :label => "Organization URL", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :organizationURL, class: "form-control" %>
			</div>
			<% end %>

			<!-- Organization Contact Name (optional) -->
			<%= form.input :organizationContactName, :label => "Contact Name", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :organizationContactName, class: "form-control" %>
			</div>
			<% end %>

			<!-- Organization Contact Job Title (optional) -->
			<%= form.input :organizationContactJobTitle, :label => "Contact Job Title", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :organizationContactJobTitle, class: "form-control" %>
			</div>
			<% end %>

			<!-- Contact Email...(optional) -->
			<%= form.input :organizationContactEmail, :label => "Contact Email", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
			<div class="col-md-8">
				<%= form.input_field :organizationContactEmail, class: "form-control" %>
			</div>
			<% end %>




			<!-- Wes Alum Bool -->
			<%= form.input :wesAlum, :label => "Is the contact a Wesleyan alum?", wrapper_html: { class: 'row' },label_html: { class: 'col-md-4 col-form-label'} do %>
				<%= form.input :wesAlum, as: :boolean, checked_value:true, unchecked_value: false, :label => " ", class: "form-control" %>
			<% end %>

</div>
